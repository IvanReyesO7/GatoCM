  <span class="content-title"><%= @code.title %></span>
</div>
<div class="code-content-main-container">
  <%= content_tag :div, class: "code-data", data: {code: @code} do %>
    <pre>
      <%= @code.content.html_safe %>
    </pre>
  <% end %>
  <div class="code-content-download-instructions">
  </div>
</div>
