<div class="main-head">
  <p>Api console</p>
  <div class="logged-info">
    <% if current_user %>
      <p>Logged as: <%= current_user.username %></p>
      <%= link_to 'Sign out', destroy_user_session_path, :method => :delete %>
    <% else %>
      <%= link_to 'Sign in', new_user_session_path, :method => :new %>
    <% end %>
  </div>
</div>